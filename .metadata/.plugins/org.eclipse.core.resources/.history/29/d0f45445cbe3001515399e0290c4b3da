package grupoD.associapp.modelo;

public class Parentesco {
	
	private int id;
	private Pessoa parente;
	private String tipo;
	
	public Parentesco(){}
	
	public Parentesco(Pessoa pessoa, TipoParentesco tipo){
		this.parente = pessoa;
		this.tipo = tipo.getNome();
	}
	
	public Pessoa getParente() {
		return parente;
	}
	
	public void setParente(Pessoa pessoa) {
		this.parente = pessoa;
	}
	
	public String getTipo() {
		return tipo;
	}
	
	public void setTipo(TipoParentesco tipo) {
		this.tipo = tipo;
	}

	public void setId(int id) {
		this.id = id;
	}
	
	public int getId(){
		return id;
	}
	
}
