package grupoD.associapp.dao;

import java.sql.Connection;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.List;

import grupoD.associapp.modelo.Contato;
import grupoD.associapp.modelo.Membro;
import grupoD.associapp.modelo.Recurso;

public class ContatoJDBC_DAO implements ContatoDAO{
	
	private Connection conn;
	
	public void inserir(Contato c) {
		Connection conn = ConnectionFactory.getConnection();
		String sql = "INSERT INTO contatos(dado, tipo) VALUES('" + c.getDado() + "'," + c.getTipo() + ");";
		try{
			System.out.println(sql);
			Statement stmt = conn.createStatement();
			stmt.executeUpdate(sql);
			conn.close();
		}catch (SQLException e){
			e.printStackTrace();
			System.out.println("Erro ao inserir contato");
		}
	}
	@Override
	public void createTable() {
		Connection conn = ConnectionFactory.getConnection();
		String sql = "CREATE TABLE contatos(id INTEGER PRIMARY KEY AUTOINCREMENT, nome TEXT, disponibilidade INT, grauSituacao INT);";
		try{
			System.out.println(sql);
			Statement stmt = conn.createStatement();
			stmt.executeUpdate(sql);
			conn.close();
		}catch (SQLException e){
			e.printStackTrace();
			System.out.println("Erro ao criar tabela");
		}
	}
	@Override
	public List<Membro> lista() {
		// TODO Auto-generated method stub
		return null;
		}
	@Override
	public void remover(Membro m) {
		Connection conn = ConnectionFactory.getConnection();
		String sql = "DELETE FROM membros where membros.getPessoa().getNome() = " + m.getPessoa().getNome();
		try{
			System.out.println(sql);
			Statement stmt = conn.createStatement();
			stmt.executeUpdate(sql);
		}catch (Exception e){
			e.printStackTrace();
			System.out.println("Erro ao excluir membro");
		}
	}
	@Override
	public Membro obter(int id) {
		// TODO Auto-generated method stub
		return null;
	}
}
