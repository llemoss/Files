package grupoD.associapp.modelo;

import grupoD.associapp.enums.Situacao;

public class Recurso {
	
	private int id;
	private String nome;
	private Situacao grauSituacao;
	private boolean disponibilidade;
	
	public Recurso(){
		this.disponibilidade = false;
	}
	
	public Recurso(String nome, Situacao grauSituacao, String afiliacao){
		this.nome = nome;
		this.grauSituacao = grauSituacao;
		this.disponibilidade = true;
	}
	
	public String getNome() {
		return nome;
	}
	
	public void setNome(String nome) {
		this.nome = nome;
	}

	public Situacao getGrauSituacao() {
		return grauSituacao;
	}

	public void setGrauSituacao(Situacao grauSituacao) {
		this.grauSituacao = grauSituacao;
	}

	public int getDisponibilidade(){
		if(this.isDisponivel() == true){
			return 1;
		}else{
			return 0;
		}
	}
	
	public void setDisponibilidade(int i){
		if(i == 1){
			this.disponibilidade = true;
		}else{
			this.disponibilidade = false;
		}
	}
	
	public boolean isDisponivel() {
		return disponibilidade;
	}

	public void setDisponibilidade(boolean disponibilidade) {
		this.disponibilidade = disponibilidade;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}
}
