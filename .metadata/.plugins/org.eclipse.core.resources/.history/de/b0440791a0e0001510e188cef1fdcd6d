package grupoD.associapp.modelo;

import java.time.LocalDateTime;

public class Data {
	private int dia;
	private int mes;
	private int ano;
	
	Data(int dia, int mes, int ano){
		this.dia = dia;
		this.mes = mes;
		this.ano = ano;
	}
	
	@Override
	public String toString() {
		return dia + "/" + mes + "/" + ano;
	}
	
	public int toInt(){
		return Integer.parseInt(dia + mes + ano);
	}
	
	public int calcularIdade(){
		int anoAtual = LocalDateTime.now().getYear();
		return anoAtual - ano;
	}

	public int getDia() {
		return dia;
	}

	public int getMes() {
		return mes;
	}

	public int getAno() {
		return ano;
	}
}
