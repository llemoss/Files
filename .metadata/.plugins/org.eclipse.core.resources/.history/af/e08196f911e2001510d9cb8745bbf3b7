package grupoD.associapp.modelo;

import java.time.LocalDateTime;

public class Data {
	
	private int dia;
	private int mes;
	private int ano;
	
	Data(int dia, int mes, int ano){
		this.dia = dia;
		this.mes = mes;
		this.ano = ano;
	}
	
	@Override
	public String toString() {
		return dia + "/" + mes + "/" + ano;
	}
	
	public int toInt(){
		String str = "";
		str += dia + mes + ano;
		return Integer.parseInt(str);
	}
	
	public Data parseInt(String str){
		String[] result;
		result = str.split("/");
		int dia = Integer.parseInt(result[0]);
		int mes = Integer.parseInt(result[1]);
		int ano = Integer.parseInt(result[2]);
		Data data = new Data(dia, mes, ano);
		return data;
	}
	
	public int calcularIdade(){
		int anoAtual = LocalDateTime.now().getYear();
		return anoAtual - ano;
	}

	public int getDia() {
		return dia;
	}

	public int getMes() {
		return mes;
	}

	public int getAno() {
		return ano;
	}
}
