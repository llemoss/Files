package grupoD.associapp.modelo;

public class Parentesco {
	
	private int id;
	private Pessoa pessoa;
	private String tipo;
	
	public Parentesco(){}
	
	public Parentesco(Pessoa pessoa, TipoParentesco tipo){
		this.pessoa = pessoa;
		this.tipo = tipo.getNome();
	}
	
	public Pessoa getPessoa() {
		return pessoa;
	}
	
	public void setPessoa(Pessoa pessoa) {
		this.pessoa = pessoa;
	}
	
	public String getTipo() {
		return tipo;
	}
	
	public void setTipo(TipoParentesco tipo) {
		this.tipo = tipo.getNome();
	}

	public void setId(int id) {
		this.id = id;
	}
	
	public int getId(){
		return id;
	}
	
}
