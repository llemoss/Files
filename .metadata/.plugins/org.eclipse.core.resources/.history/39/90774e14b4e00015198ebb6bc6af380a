	@Override
	public void createTable() {
		Connection conn = ConnectionFactory.getConnection();
		String sql = "CREATE TABLE pessoas(id INTEGER PRIMARY KEY AUTOINCREMENT, nome TEXT, idade INT, id_parentesco INT,"
				+ "sexo TEXT, profissao TEXT, situacao_laboral TEXT, religiao TEXT, time TEXT,"
				+ "id_contatos INT, renda REAL, grau_escolaridade TEXT, data_nascimento TEXT);";
